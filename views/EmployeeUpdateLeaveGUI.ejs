<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="css/EmployeeUpdateLeave.css">
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
</head>
<body>
  <div id="managerpage">
    <h1 onclick="document.location='/homepage'" class="logo">Employee Page</h1>
    <button class="openbtn" onclick="openNav()" id="settingsbtn"><img src="img/settings.png" class="image1"></button>
  </div>
  <div id="mySidepanel" class="sidepanel">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">back</a>
    <a href="#" onclick="document.location='/logout'" id="logout">Logout</a>
    <a href="#" onclick="document.location='/resetpassword'">Reset Password</a>
  </div>
  <script>
    function openNav() {
      document.getElementById("mySidepanel").style.width = "250px";
    }
    function closeNav() {
      document.getElementById("mySidepanel").style.width = "0";
    }
    function goBack() {
      window.history.back();
    }
    function changeInputType() {
      var selectElement = document.querySelector('.profile-select');
      var inputElement = document.getElementById('data');
      
      if (selectElement.value === 'Date') {
        inputElement.type = 'date';
      } else {
        inputElement.type = 'text';
      }
    }
  </script>
  <div class="container">
    <div id="backbutton">
      <button id="back" onclick="goBack()" class="rounded-button">&laquo; Back</button>
    </div>
    <div id="options">
      <h1>Update My Employee Leave</h1>
      <form action="/employee_updateleave" method="post">
        <% if(message.length > 0) { %>
          <div class="message"><%= message %></div>
        <% } %>
        <div class="form-group">
          <label for="typeVariable">Type Leave ID:</label>
          <input type="text" id="typeVariable" name="leaveid" class="form-control">
        </div>
        <div class="form-group">
          <label for="category">Select Category to Update:</label>
          <select class="profile-select form-control" name="selectedoption" onchange="changeInputType()">
            <option value="" selected disabled>Select an option</option>
            <% myList.forEach(item => { %>
              <option value="<%= item %>"><%= item %></option>
            <% }); %>
          </select>
        </div>
        <div class="form-group">
          <label for="data">Type New Information:</label>
          <input type="text" id="data" name="value" class="form-control">
        </div>
        <div class="form-group">
          <button type="submit" name="update" class="rounded-button">Update</button>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
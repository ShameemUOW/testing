<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="css/AdminViewProfileTable.css">
    </head>
    <body>
        <div id="adminpage">
            <h1 onclick="document.location='/homepage'" style="text-align: center;">Smart Employee Roster</h1>
        </div>

        <div id="mySidepanel" class="sidepanel">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">back</a>
            <a href="#" onclick="document.location='/logout'">Logout</a>
            <a href="#" onclick="document.location='/resetpassword'">Reset Password</a>
        </div>
        <button class="openbtn" onclick="openNav()"><img src="img/settings.png" class="image"></button>
        <script>
            function openNav() {
              document.getElementById("mySidepanel").style.width = "250px";
            }
            
            function closeNav() {
              document.getElementById("mySidepanel").style.width = "0";
            }
        </script>

        <div id="backbutton">
            <button id="back" onclick="document.location='/admin_view'"><b>&laquo;back</b></button>
        </div>
        <div id="options">
            <h1>Viewing all Employee Accounts</h1><br>
            <% if(message.length>0) {%>
                <div><%= message%></div>
            <%}%>
            <% if(typeof results !== "undefined") {%>
                <table id="employeeTable" style="width: 100%; border-collapse: collapse; margin: 20px 0; font-size: 16px; text-align: left;">
                    <thead>
                        <tr>
                            <th style="padding: 12px 15px; border-bottom: 1px solid #ddd; background-color: #a42929;">UserAccount ID</th>
                            <th style="padding: 12px 15px; border-bottom: 1px solid #ddd; background-color: #a42929;">Fullname</th>
                            <th style="padding: 12px 15px; border-bottom: 1px solid #ddd; background-color: #a42929;">Address</th>
                            <th style="padding: 12px 15px; border-bottom: 1px solid #ddd; background-color: #a42929;">Email</th>
                            <th style="padding: 12px 15px; border-bottom: 1px solid #ddd; background-color: #a42929;">Contact Number</th>
                            <th style="padding: 12px 15px; border-bottom: 1px solid #ddd; background-color: #a42929;">Username</th>
                            <th style="padding: 12px 15px; border-bottom: 1px solid #ddd; background-color: #a42929;">Chat ID</th>
                            <th style="padding: 12px 15px; border-bottom: 1px solid #ddd; background-color: #a42929;">Max Hours</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i<results.length; i++) { %>
                        <tr style="background-color: <%= i % 2 === 0 ? '#a42929' : '#000000' %>;">
                            <td style="padding: 12px 15px; border-bottom: 1px solid #ddd;"><%= results[i][0] %></td>
                            <td style="padding: 12px 15px; border-bottom: 1px solid #ddd;"><%= results[i][1] %></td>
                            <td style="padding: 12px 15px; border-bottom: 1px solid #ddd;"><%= results[i][2] %></td>
                            <td style="padding: 12px 15px; border-bottom: 1px solid #ddd;"><%= results[i][3] %></td>
                            <td style="padding: 12px 15px; border-bottom: 1px solid #ddd;"><%= results[i][4] %></td>
                            <td style="padding: 12px 15px; border-bottom: 1px solid #ddd;"><%= results[i][5] %></td>
                            <td style="padding: 12px 15px; border-bottom: 1px solid #ddd;"><%= results[i][6] %></td>
                            <td style="padding: 12px 15px; border-bottom: 1px solid #ddd;"><%= results[i][7] %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            <%}%>
        </div>
    </body>
</html>
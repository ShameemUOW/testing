<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="css/ManagerViewEWS.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
  <header>
    <div id="adminpage">
      <h1 onclick="document.location='/homepage'">Manager Page</h1>
    </div>
    <div id="mySidepanel" class="sidepanel">
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"><i class="fas fa-times"></i></a>
      <a href="#" onclick="document.location='/logout'"><i class="fas fa-sign-out-alt"></i> Logout</a>
      <a href="#" onclick="document.location='/resetpassword'"><i class="fas fa-lock"></i> Reset Password</a>
    </div>
    <button class="openbtn" onclick="openNav()"><i class="fas fa-cog"></i></button>
  </header>

  <main>
    <div id="backbutton">
      <button id="back" onclick="document.location='/homepage'"><i class="fas fa-arrow-left"></i> Back</button>
    </div>

    <div id="options">
      <h1>Viewing All Employee Work Shifts</h1>
      <% if(message.length > 0) {%>
        <div class="message"><%= message%></div>
      <%}%>

      <% if(typeof shiftsData !== "undefined") {%>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>Full Name</th>
                <th>Shift Date</th>
                <th>Shift Type</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i<shiftsData.length;i++) { %>
                <tr>
                  <td><%= shiftsData[i].person %></td>
                  <td><%= shiftsData[i].shiftDate %></td>
                  <td><%= shiftsData[i].shiftType %></td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      <%}%>
    </div>
  </main>

  <script>
    function openNav() {
      document.getElementById("mySidepanel").style.width = "250px";
    }
    function closeNav() {
      document.getElementById("mySidepanel").style.width = "0";
    }
  </script>
</body>
</html>
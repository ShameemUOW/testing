<!DOCTYPE html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="css/ManagerFEAT.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
  <div id="ownerpage">
    <h1 onclick="document.location='/homepage'">Manager Page</h1>
  </div>
  
  <div id="mySidepanel" class="sidepanel">
    <a href="#" onclick="document.location='/logout'">Logout</a>
    <a href="#" onclick="document.location='/resetpassword'">Reset Password</a>
    <a href="#" onclick="document.location='/homepage'">Go back to Home Page</a>
  </div>
  
  <button class="openbtn" onclick="toggleNav()">&#9776;</button>
  
  <script>
    function toggleNav() {
      var sidepanel = document.getElementById("mySidepanel");
      var openbtn = document.querySelector(".openbtn");
      
      if (sidepanel.style.right === "0px") {
        sidepanel.style.right = "-250px";
        openbtn.innerHTML = "&#9776;";
      } else {
        sidepanel.style.right = "0px";
        openbtn.innerHTML = "&#10006;";
      }
    }
  </script>
  
  <div class="container">
    <h1>Filtered Search Results</h1>
    <% if(typeof results !== "undefined") { %>
      <div class="table-responsive">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Address</th>
              <th>Email</th>
              <th>Mobile</th>
              <th>Chat ID</th>
              <th>Max Hours</th>
              <th>Job</th>
              <th>Hours Worked</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i<results.length;i++) { %>
              <tr>
                <td><%= results[i][0] %></td>
                <td><%= results[i][1] %></td>
                <td><%= results[i][2] %></td>
                <td><%= results[i][3] %></td>
                <td><%= results[i][4] %></td>
                <td><%= results[i][5] %></td>
                <td><%= results[i][6] %></td>
                <td><%= results[i][7] %></td>
                <td><%= results[i][8] %></td>
                <td><%= results[i][9] %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</body>
</html>
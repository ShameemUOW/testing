<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="css/EmployeeViewPastWorkHistory.css">
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
</head>
<body>
  <div id="adminpage">
    <h1 onclick="document.location='/homepage'" class="logo">Smart Employee Roster</h1>
    <button class="openbtn" onclick="openNav()"><img src="img/settings.png" class="image"></button>
  </div>
  <div id="mySidepanel" class="sidepanel">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">back</a>
    <a href="#" onclick="document.location='/logout'">Logout</a>
    <a href="#" onclick="document.location='/resetpassword'">Reset Password</a>
  </div>
  <script>
    function openNav() {
      document.getElementById("mySidepanel").style.width = "250px";
    }
    function closeNav() {
      document.getElementById("mySidepanel").style.width = "0";
    }
  </script>
  <div class="container">
    <div id="backbutton">
      <button id="back" onclick="document.location='/homepage'" class="rounded-button">&laquo; Back</button>
    </div>
    <div id="options">
      <h1>Viewing all Past Work History</h1>
      <% if(message.length > 0) { %>
        <div class="message"><%= message %></div>
      <% } %>
      <% if(typeof alldata !== "undefined") { %>
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Clock In</th>
              <th>Clock Out</th>
              <th>Attendance</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0; i < alldata.length; i++) { %>
              <tr>
                <td><%= alldata[i][0] %></td>
                <td><%= alldata[i][1] %></td>
                <td><%= alldata[i][2] %></td>
                <td><%= alldata[i][3] %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      <% } %>
    </div>
  </div>
</body>
</html>
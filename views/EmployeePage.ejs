                    <td><button id = "tts" onclick="speak('Clock-in or Clock-out')"><img src="img/accessibility.png" alt="Speak" style="width: 40px; height: 40px;"></button></td>
                    <td><button id = "tts" onclick="speak('View Notifications')"><img src="img/accessibility.png" alt="Speak" style="width: 40px; height: 40px;"></button></td>
                </tr>

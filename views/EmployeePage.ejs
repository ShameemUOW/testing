                    <td><button id="employee_viewnotification" onclick="document.location='/employee_viewnotification'"><img src=img/notification.png class="image"><h3>View Notification</h3></button></td>
                </tr>
                <tr align="center">
                    <td><button id = "tts" onclick="speak('Apply For Leave')"><img src="img/accessibility.png" alt="Speak" style="width: 40px; height: 40px;"></button></td>

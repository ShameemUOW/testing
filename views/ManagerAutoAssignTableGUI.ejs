<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/ManagerAAT.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <header>
        <div id="ownerpage">
            <h1 onclick="document.location='/homepage'">Manager Page</h1>
        </div>
        <div id="mySidepanel" class="sidepanel">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"><i class="fas fa-arrow-left"></i> Back</a>
            <a href="#" onclick="document.location='/logout'"><i class="fas fa-sign-out-alt"></i> Logout</a>
            <a href="#" onclick="document.location='/resetpassword'"><i class="fas fa-lock"></i> Reset Password</a>
            <a href="#" onclick="document.location='/homepage'"><i class="fas fa-home"></i> Go back to Home Page</a>
        </div>
        <button class="openbtn" onclick="openNav()"><i class="fas fa-cog"></i></button>
    </header>
    <main>
        <div id="options">
            <h1>Viewing All Auto-Assigned Employees</h1>
            <% if(typeof assignedEmployees !== "undefined") {%>
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Phone Number</th>
                                <th>Shift Date</th>
                                <th>Shift Type</th>
                                <th>Shift Start</th>
                                <th>Shift End</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i<assignedEmployees.length;i++) { %>
                                <tr>
                                    <td><%= assignedEmployees[i][0]%></td>
                                    <td><%= assignedEmployees[i][1]%></td>
                                    <td><%= assignedEmployees[i][2]%></td>
                                    <td><%= assignedEmployees[i][3]%></td>
                                    <td><%= assignedEmployees[i][4]%></td>
                                    <td><%= assignedEmployees[i][5]%></td>
                                    <td><%= assignedEmployees[i][6]%></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            <%}%>
            <% if (typeof unassignedShifts !== "undefined") { %>
                <h2>Unassigned Shifts</h2>
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Needed</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (var j = 0; j < unassignedShifts.length; j++) { %>
                                <tr>
                                    <td><%= unassignedShifts[j][0] %></td>
                                    <td><%= unassignedShifts[j][1] %></td>
                                    <td><%= unassignedShifts[j][2] %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </main>
    <script>
        function openNav() {
            document.getElementById("mySidepanel").style.width = "250px";
        }
        function closeNav() {
            document.getElementById("mySidepanel").style.width = "0";
        }
    </script>
</body>
</html>
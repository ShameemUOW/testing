<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="css/Managercreatetable.css">
    </head>
    <body>
        <div id="managerpage">
            <h1 onclick="document.location='/homepage'" style="text-align: center;">Smart Employee Roster</h1>
        </div>

        <div id="mySidepanel" class="sidepanel">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">back</a>
            <a href="#" onclick="document.location='/logout'">Logout</a>
            <a href="#" onclick="document.location='/resetpassword'">Reset Password</a>
        </div>
        <button class="openbtn" onclick="openNav()"><img src="img/settings.png" class="image1"></button>
        <script>
            function openNav() {
              document.getElementById("mySidepanel").style.width = "250px";
            }
            
            function closeNav() {
              document.getElementById("mySidepanel").style.width = "0";
            }
        </script>

        <div id="backbutton">
            <button id="back" onclick="document.location='/homepage'"><b>&laquo;back</b></button>
        </div>
        <form action = "/updateuserprofile" method = "POST">
            <div id="options">
                <table class = "creating">
                    <h1>Update User Profile</h1><br>
                    <% if(message.length>0) {%>
                        <div><%= message%></div>
                    <%}%>
                    <tr>
                        <td></td>
                        <td><input id="employeeid" class = "textbox" type="text" name="employeeid" placeholder="Enter Employee ID"></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><select class="profile-select" name = "selectedoption">
                                <option value = "Profile">Profile</option>
                                <option value = "Role">Role</option>
                        </select></td>
                        <td><input id="role" class = "textbox" type="text" name="role" placeholder="Enter Profile or Role"></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><button class = "rounded-button" id="button"><b>Update</b></button></td>
                        <td></td>
                    </tr>
                </table>
            </div>
        </form>
    </body>
</html>
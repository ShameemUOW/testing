<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="css/ManagerRL.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
  <header>
    <div id="adminpage">
      <h1 onclick="document.location='/homepage'">Manager Page</h1>
    </div>
    <div id="mySidepanel" class="sidepanel">
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"><i class="fas fa-times"></i></a>
      <a href="#" onclick="document.location='/logout'"><i class="fas fa-sign-out-alt"></i> Logout</a>
      <a href="#" onclick="document.location='/resetpassword'"><i class="fas fa-lock"></i> Reset Password</a>
    </div>
    <button class="openbtn" onclick="openNav()"><i class="fas fa-cog"></i></button>
  </header>

  <main>
    <div id="backbutton">
      <button id="back" onclick="document.location='/homepage'"><i class="fas fa-arrow-left"></i> Back</button>
    </div>

    <form action="/managerrejectleave" method="POST">
      <div id="options">
        <h1>Reject Leaves</h1>
        <% if(message.length > 0) {%>
          <div class="message"><%= message%></div>
        <%}%>

        <% if(typeof results !== "undefined") {%>
          <div class="table-container">
            <table>
              <thead>
                <tr>
                  <th>Leave ID</th>
                  <th>Employee ID</th>
                  <th>Date</th>
                  <th>Leave Type</th>
                  <th>Reason</th>
                  <th>Reject</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i<results.length;i++) { %>
                  <tr>
                    <td><%= results[i][0]%></td>
                    <td><%= results[i][1]%></td>
                    <td><%= results[i][2]%></td>
                    <td><%= results[i][3]%></td>
                    <td>
                      <div class="reason-input">
                        <input type="text" name="reason<%= results[i][0]%>" placeholder="Reason for rejection">
                      </div>
                    </td>
                    <td>
                      <button class="reject-btn" value='<%= results[i]%>' name="buttonid">
                        <i class="fas fa-times-circle"></i> Reject
                      </button>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        <%}%>
      </div>
    </form>
  </main>

  <script>
    function openNav() {
      document.getElementById("mySidepanel").style.width = "250px";
    }
    function closeNav() {
      document.getElementById("mySidepanel").style.width = "0";
    }
  </script>
</body>
</html>